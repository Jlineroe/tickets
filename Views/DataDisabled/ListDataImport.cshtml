@model IEnumerable<AIBTicketsMVC.Models.WorkOrder_DataImported>
<table id="TableGeneral" class="table table-sm table-bordered table-hover" style="width:100%;">
    <thead>
        <tr>
            <th></th>
            <th>Nombre Data</th>
            <th>Registros</th>
            <th>Usuario carga</th>
            <th>Fecha carga</th>
            <th>Estado</th>
            <th>Usuario desactiva</th>
            <th>Motivo desactiva</th>
            <th>Fecha desactiva</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string inactivo = "";
            if (item.State == false)
            {
                inactivo = "table-danger";
            }
        <tr class="@inactivo">
            <td>
                @if (item.State == true)
                {
                    <button onclick="DisabledDataImport(@item.IdDataImported,'@item.NameData');" class="btn btn-sm btn-danger">
                        Desactivar
                    </button>
                }
            </td>
            <td>@item.NameData</td>
            <td>@item.NumRecords</td>
            <td>@item.UserImport.FullName</td>
            <td>@item.DateLog</td>
            <td>
                @if (item.State == true)
                {
                    <span class="badge badge-success text-wrap" style="font-size: 100%;">Activo</span>
                }
                else
                {
                    <span class="badge badge-danger text-wrap" style="font-size: 100%;">Inactivo</span>

                }
            </td>
            <td>@item.UserDesactivated.FullName</td>
            <td>@item.DesactivationReason</td>
            <td>@item.DateDesactivation</td>
        </tr>
        }
    </tbody>
</table>
