
    <div id="myModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar sitio</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="HdIdSite" />
                    <div class="form-group row">
                        <div class="col-md">
                            <label for="TxtNameSiteModal">Nombre </label>
                            <input type="text" id="TxtNameSiteModal" class="form-control required" placeholder="Nombre del sitio" onkeyup="VerifyNameSite(this.value);" maxlength="50" />
                            <span id="TxtNameSite-error" class="invalid-feedback"></span>
                        </div>
                        <div class="col-md-4">
                            <div class="custom-control custom-checkbox" style="padding-top:28px">
                                <input type="checkbox" class="custom-control-input" id="chkSubStatusModal">
                                <label class="custom-control-label" for="chkSubStatusModal">Sub estado obligatorio</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label for="DdlEstado">Estado</label>
                            <select id="DdlEstado" class="form-control" disabled>
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="TxtDescripcionSiteModal">Descripcion</label>
                            <input type="text" id="TxtDescripcionSiteModal" class="form-control required" placeholder="Descripcion Sitio" maxlength="500" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="BtnUpdate" type="button" class="btn btn-primary">Guardar cambios</button>
                    <button class="btn btn-primary BtnLoading" type="submit" style="display:none;" disabled>
                        <span class="spinner-border spinner-border-sm"></span>
                        Loading...
                    </button>
                </div>
            </div>
        </div>
    </div>