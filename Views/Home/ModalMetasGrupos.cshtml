@model AIBTicketsMVC.Models.HomeHistory
<div id="myModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h5 class="modal-title">Metas x Grupos</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-4">
                                <strong for="DdlGroup">Grupos</strong>
                                <select id="DdlGroup" class="form-control required" onchange="changeGrupo(this.value);" required>
                                    <option value="">--Seleccionar--</option>
                                    @foreach (var item in ViewBag.Grupos)
                                    {
                                        <option value="@item.IdMasterGroups">@item.NameGroup</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-4">
                                <strong>Meta</strong>
                                <input type="number" id="txtMeta" class="form-control required" placeholder="Meta" onkeypress="return solonumeros(event);" required/>
                                <strong id="lblGrupos-error" class="text-danger"></strong>
                            </div>
                            <div class="col-md-4">
                                <strong>Fecha Meta</strong>
                                <div class="input-group date">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fa fa-calendar"></i>
                                        </span>
                                    </span>
                                    <input type="text" class="form-control datepicker datepicker-days" placeholder="fecha Meta" id="field_Fech_Meta" required/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" id="BtnGuardar" value="Guardar" />
                    <button class="btn btn-primary BtnLoading" type="submit" style="display:none;" disabled>
                        <span class="spinner-border spinner-border-sm"></span>
                        Loading...
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
