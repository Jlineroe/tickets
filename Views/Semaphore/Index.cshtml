@model AIBTicketsMVC.Models.ListasDesplegables
@{
    ViewData["Title"] = "Semaforizacion";
}
@section Styles {
    <link href="~/wwwroot/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/wwwroot/vendor/sweetalert/sweetalert.css" rel="stylesheet" />
    <style type="text/css">
        th, td {
            white-space: nowrap;
        }

        hr {
            margin-bottom: 0px;
            margin-top: 0px;
        }
    </style>
}

@section Scripts {
    <script src="~/wwwroot/vendor/sweetalert/sweetalert.min.js"></script>
    <script src="~/wwwroot/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/wwwroot/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/wwwroot/assets/js/Forms/UtilitiesJS.js"></script>
    <script src="~/wwwroot/assets/js/Forms/Semaphore.js"></script>
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Semaforizacion</h1>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">Listado de Semaforos</h6>
            </div>
            <div class="card-body">
                <div id="DivBtnSave" class="form-group row">
                    <div class="col-md-4">
                        <button type="button" onclick="CrearSemaforo()" class="btn btn-primary btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fa fa-plus"></i>
                            </span>
                            <span class="text">Crear Semaforo</span>
                        </button>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="table-responsive" id="divTable">
                        @Html.Action("ListSemaphore", "Semaphore")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("ModalSemaphore")