@model AIBTicketsMVC.Models.ReclamoDatacredito
    <div id="myModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <h5 class="modal-title">Estado</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" id="HdIdStatus" />
                        <div class="form-group row">
                            <div class="col-md-4">
                                <label for="TxtNameStatus">Nombre estado</label>
                                <input type="text" id="TxtNameStatus" class="form-control required" placeholder="Nombre Estado" maxlength="30" />
                                <span id="TxtNameStatus-error" class="text-danger"></span>
                            </div>
                            <div class="col-md-3">
                                <label for="DdlTipoEstado">Estado</label>
                                <select id="DdlTipoEstado" class="form-control required">
                                    <option value="">--Seleccionar--</option>
                                        @foreach (var item1 in ViewBag.Est)
                                        {
                                            <option value=@item1.Text> @item1.Text</option>
                                        }
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="DdlSitio">SubEstado</label>
                                <select id="DdlTipoEstado" class="form-control required">
                                    <option value="">--Seleccionar--</option>
                                    @foreach (var item1 in ViewBag.SubEst)
                                    {
                                <option value=@item1.Text> @item1.Text</option>}
                                </select>
                            </div>
                        </div>
                        
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-primary" id="BtnGuardar" value="Guardar" />
                        <button class="btn btn-primary BtnLoading" type="submit" style="display:none;" disabled>
                            <span class="spinner-border spinner-border-sm"></span>
                            Loading...
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>