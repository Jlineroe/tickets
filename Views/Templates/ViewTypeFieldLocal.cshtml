@model AIBTicketsMVC.Models.FieldsUDF
@{ 
    int NumColums = 3;
    if (Model.FieldType.IdFieldsTypesUDF == 8) //Campo Tipo busqueda de Puestos
    {
        NumColums = 6;
    }
}
<div class="col-md-@NumColums numDivFields" data-idfieldsudf="@Model.IdFieldsUDF" id="divHTMLInput-@Model.IdFieldsUDF">
    <div class="form-group">
        <div class="card">
            <div class="card-body rounded-sm shadow" style="padding: 10px;">
                <div class="text-center">
                    @{
                        int IdFieldsTypes = Model.FieldType.IdFieldsTypesUDF;
                        if (IdFieldsTypes == 1) //Fecha
                        {
                            <strong>@Model.NameField</strong>
                            <div class="input-group date">
                                <span class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="fa fa-calendar"></i>
                                    </span>
                                </span>
                                <input type="text" class="form-control form-control-sm datepicker" placeholder="Fecha" />
                            </div>
                        }
                        else if (IdFieldsTypes == 2) //Numero
                        {
                            <strong>@Model.NameField</strong>
                            <input type="number" class="form-control form-control-sm" placeholder="Numero" maxlength="4" onkeypress="return solonumeros(event);" />
                        }
                        else if (IdFieldsTypes == 3) //Linea de texto simple
                        {
                            <strong>@Model.NameField</strong>
                            <input type="text" class="form-control form-control-sm" placeholder="Texto" maxlength="@Model.Longitud" />
                        }
                        else if (IdFieldsTypes == 5) //Caja de verificacion
                        {
                            <div class="text-center">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="checklocal-@Model.IdFieldsUDF" />
                                    <label class="custom-control-label" for="checklocal-@Model.IdFieldsUDF">@Model.NameField</label>
                                </div>
                            </div>
                        }
                        else if (IdFieldsTypes == 6) //Lista desplegable
                        {
                            <strong>@Model.NameField</strong>
                            <select class="form-control form-control-sm">
                                <option value="">--Seleccionar--</option>
                                @foreach (var disp in Model.Dispositions)
                                {
                                    <option value="@disp.IdFieldsDispositions">@disp.Dispositions</option>
                                }
                            </select>
                        }
                        else if (IdFieldsTypes == 8) //Busqueda de puestos en plataformas
                        {
                            <div class="row">
                                <div class="col-md-4">
                                    <strong>Sede</strong>
                                    <select class="form-control form-control-sm InputSedes">
                                        <option value="">--Seleccionar--</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <strong>Plataforma</strong>
                                    <select class="form-control form-control-sm">
                                        <option value="">--Seleccionar--</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <strong>@Model.NameField</strong>
                                    <input type="text" class="form-control form-control-sm" placeholder="Nombre, Extension o IP" maxlength="100" />
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
            <div class="card-footer" style="padding-top: 7px;padding-bottom: 7px;">
                <div class="text-center divBtns">
                    <button type="button" style="padding-top: 0px;padding-bottom: 0px;" class="btn btn-link" onclick="DeleteInputHTML(@Model.IdFieldsUDF);">Desactivar</button>
                </div>
            </div>
        </div>
    </div>
</div>
