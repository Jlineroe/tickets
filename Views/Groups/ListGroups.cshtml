@model IEnumerable<AIBTicketsMVC.Models.Groups>

<table id="TableGeneral" class="table table-sm table-bordered table-hover" style="width:100%;">
    <thead>
        <tr>
            <th></th>
            <th>Nombre</th>
            <th>Descripcion del grupo</th>
            <th>LOB</th>
            <th>Retorna ?</th>
            <th>Sitio</th>
            <th>Fecha Ingreso</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string inactivo = "", disabled="";;
            if (item.State == false)
            {
                inactivo = "table-danger";
                disabled = "disabled";
            }
        <tr class="@inactivo" id="Idtr_@item.IdMasterGroups">
            <td>
                <div class="btn-group" role="group">
                    <button onclick="SearchInforGroup(@item.IdMasterGroups);" class="btn btn-sm btn-info BtnEdit">
                        <i class="fas fa-edit fa-sm"></i>
                        Editar
                    </button>
                    <button onclick="DeleteGroup(@item.IdMasterGroups);" class="btn btn-sm btn-danger BtnDelete" @disabled>
                        <i class="fas fa-trash-alt fa-sm"></i>
                        Desactivar
                    </button>
                </div>
            </td>
            <td>@item.NameGroup</td>
            <td class="text-truncate" style="max-width: 400px;">
                @item.DescriptionGroup
            </td>
            <td>@item.LOB.Nombre</td>
            <td>@item.ReturnUser</td>
            <td>@item.Sitio.NameSite</td>
            <td>@item.DateLog</td>
            <td>
                @if (item.State == true)
                {
                    <span class="badge badge-success text-wrap" style="font-size: 100%;">Activo</span>
                }
                else
                {
                    <span class="badge badge-danger text-wrap" style="font-size: 100%;">Inactivo</span>

                }
            </td>
        </tr>
        }
    </tbody>
</table>
